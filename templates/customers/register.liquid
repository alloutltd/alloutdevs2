<h1>
  {{ 'customer.register.title' | t }}
</h1>
{%- form 'create_customer', novalidate: 'novalidate' -%}
  {%- if form.errors -%}
    <h2 class="form__message" tabindex="-1" autofocus>
      <svg aria-hidden="true" focusable="false" role="presentation">
        <use href="#icon-error" />
      </svg>
      {{ 'templates.contact.form.error_heading' | t }}
    </h2>
    <ul> 
      {%- for field in form.errors -%}
        <li>
          {%- if field == 'form' -%}
            {{ form.errors.messages[field] }}
          {%- else -%}
            <a href="#RegisterForm-{{ field }}">
              {{ form.errors.translated_fields[field] | capitalize }}
              {{ form.errors.messages[field] }}
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
  <div class="sub-heading">
    <p>Sign up to All Out and have the ability to manage your account, track your orders, create a wishlist and earn credits to get money off your orders.</p>
  </div>
  <div class="field__container">
    <h3 class="label">First Name*</h3>
  <div class="field">      
    <input
      type="text"
      name="customer[first_name]"
      id="RegisterForm-FirstName"
      required="true"
      {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
      autocomplete="given-name"
      placeholder="Enter your first name here..."
    >
    <!--<label for="RegisterForm-FirstName">
      {{ 'customer.register.first_name' | t }}
    </label>-->
  </div>
</div>
<div class="field__container">
  <h3 class="label">Last Name*</h3>
  <div class="field">
    <input
      type="text"
      name="customer[last_name]"
      id="RegisterForm-LastName"
      required="true"
      {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
      autocomplete="family-name"
      placeholder="Enter your last name here..."
    >
    <!--<label for="RegisterForm-LastName">
      {{ 'customer.register.last_name' | t }}
    </label>-->
  </div>
</div>
<div class="field__container" id="gender__container">
  <h3 class="label">Gender*</h3>
  <div id="gender-wrapper" class="field">
        <select name="customer[note][gender]" id="gender" class="text" required="true" placeholder="Select a gender">
          <option value="default">Select a gender</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>
    </div>
  </div>
  <div class="field__container" id="birthday__container">
    <h3 class="label">Birthday*</h3>
  <div id="birthday-wrapper" class="field">
    <input type="date" value="" name="customer[note][birthday]" id="birthday" class="text" size="30" required="true"/>
    </div>
  </div>
  <div class="field__container">
    <h3 class="label">Email*</h3>
  <div class="field">    
    <input
      type="email"
      name="customer[email]"
      id="RegisterForm-email"
      {% if form.email %} value="{{ form.email }}"{% endif %}
      spellcheck="false"
      autocapitalize="off"
      autocomplete="email"
      aria-required="true"
      {% if form.errors contains 'email' %}
        aria-invalid="true"
        aria-describedby="RegisterForm-email-error"
      {% endif %}
      placeholder="Enter your email here..."
    >
    <!--<label for="RegisterForm-email">
      {{ 'customer.register.email' | t }}
    </label>-->
  </div>
</div>
  {%- if form.errors contains 'email' -%}
    <span id="RegisterForm-email-error" class="form__message">
      <svg aria-hidden="true" focusable="false" role="presentation">
        <use href="#icon-error" />
      </svg>
      {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.
    </span>
  {%- endif -%}
  <div class="field__container">
    <h3 class="label">Password*</h3>
  <div class="field">     
    <input
      type="password"
      name="customer[password]"
      id="RegisterForm-password"
      aria-required="true"
      {% if form.errors contains 'password' %}
        aria-invalid="true"
        aria-describedby="RegisterForm-password-error"
      {% endif %}
      placeholder="Craete a password..."
    >
    <!--<label for="RegisterForm-password">
      {{ 'customer.register.password' | t }}
    </label>-->
  </div>
</div>
  {%- if form.errors contains 'password' -%}
    <span id="RegisterForm-password-error" class="form__message">
      <svg aria-hidden="true" focusable="false" role="presentation">
        <use href="#icon-error" />
      </svg>
      {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}.
    </span>
  {%- endif -%}
  <div class="notes">
    <p>By creating an account, you are opting in to receive email marketing from All Out</p>
    <p>By creating an account, you are agreeing to our Terms and Conditions</p>
    <p>For full details on how we use your personal information, please visit our <a>Privacy Policy</a> page</p>
  </div>
  <button>
    {{ 'customer.register.submit' | t }}
  </button>
{%- endform -%}
</div>
